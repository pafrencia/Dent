                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalBorrarTurno">X</button>
                    </td>
                </tr>
                    condicionCumplida = true;
                    break;
                }

            }

            @if (condicionCumplida == false)
            {
                <tr class="table-info" @onclick="() => SeleccionarHora(hora, IdTurno)">
                    <td>@hora</td>
                    <td>@estado</td>
