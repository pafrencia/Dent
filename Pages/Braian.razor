                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var practicaRealizada in ListaDePracticasRealizadas)
            {
                <tr class="table-success" @onclick="() => SeleccionarPracticaRealizada(practicaRealizada.Id)">
