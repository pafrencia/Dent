        <thead>
            <tr class="table-dark">
                <th>FECHA</th>
                <th>PACIENTE</th>
                <th>PRACTICA</th>
                <th>OBRA SOCIAL</th>
                <th>PRECIO</th>
                <th>ODONTOLOGO</th>
