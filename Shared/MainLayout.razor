@inherits LayoutComponentBase
@using Dent.Pages
@inject NavigationManager NavigationManager

<style>
    .small2 {
        width: 100%;
        height: 25px;
        background - color: white;
        color: lightgray;
        border: none;
        padding: 0;
        margin: 0;
        font-size: 20px;
    }
</style>

<PageTitle>Dent</PageTitle>

<button class="small2 " @onclick="() => ShowNav(1)">@nombraBotonOcultarNav</button>
<div class="page">

    <div class="sidebar" style="display: @(CoultarNav == 1 ? "block" : "none")">
        
        <NavMenu />

    </div>

    <main>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


@code {
    private int CoultarNav = 1;
    private string nombraBotonOcultarNav = "X APLICACION CREADA CON BLAZOR EN c# By Pablo Ariel Frencia";
    public void ShowNav(int divNumber)
    {
        // Cambiar el número del div actual al hacer clic en el botón correspondiente
        if (CoultarNav == 1)
        {
            CoultarNav = 0;
            nombraBotonOcultarNav = "---------------------------------------------------";
        }
        else
        {
            CoultarNav = 1;
            nombraBotonOcultarNav = "X APLICACION CREADA CON BLAZOR EN c# By Pablo Ariel Frencia";
        }
    }
}