<!-- _Imports.razor o donde estés usando iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="top-row ps-3 navbar navbar-light " style="background-color: #87CEEB;">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Sonrisas Perfectas</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable " @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Imprimir">
                <span class="fas fa-print" aria-hidden="true"></span> Imprimir
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Practicas">
                <span class="oi oi-plus" aria-hidden="true"></span> Practicas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Pacientes">
                <span class="fas fa-user" aria-hidden="true"></span> Pacientes
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
